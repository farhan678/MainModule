<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cLabourTableLayout">

    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="vertical"
        android:background="@color/grey"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cBatchID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:text="BatchID"
            android:textColor="@color/cListTextColor"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/cProject_NO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:textColor="@color/cListTextColor"
            android:text="Project No."
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/cVendor_Nam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.6"
            android:textColor="@color/cListTextColor"
            android:text="Vendor Name"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:weightSum="10"
        android:layout_below="@+id/linear"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cReported_Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.4"
            android:textColor="@color/cListTextColor"
            android:singleLine="true"
            android:text="Reported Date"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/cRemark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.1"
            android:textColor="@color/cListTextColor"
            android:text="Remark"
            android:textSize="16dp"/>

        <TextView
        android:id="@+id/cRemark1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.6"
        android:text="Action"
        android:textColor="@color/cListTextColor"
        android:textSize="16dp"/>
    </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_below="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mBtnAddLabour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:src="@android:drawable/ic_input_add" />


</RelativeLayout>
