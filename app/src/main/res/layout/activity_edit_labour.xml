<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Batch Id"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp"
                    android:enabled="false"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:singleLine="true"
                    android:id="@+id/mBatchId"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Project No"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:id="@+id/mSpinnerProjectNumber"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Vendor No"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:id="@+id/mSpinnerContracterNumber"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Agr No"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:id="@+id/mSpinnerContractNumber"></Spinner>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rpt By"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtreportedby"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp"
                    android:enabled="false"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/labour_add_label_font"
                    android:text="Rpt Date"
                    android:textStyle="bold"
                    android:id="@+id/mSpinnerReportedBy"></TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:enabled="false"
                    android:textSize="@dimen/general_font"
                    android:layout_toLeftOf="@+id/edtPicdate"
                    android:textColor="@color/cListBlackTextColor"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:id="@+id/edtReportedate"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/calendar_icon"
                    android:onClick="showDatePickerDialog"
                    android:id="@+id/edtPicdate"/>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Esti Flag"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mChkEstimationFlag"
                        android:checked="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/mImgAttachment"
                        android:src="@android:drawable/ic_menu_camera"
                        android:scaleType="fitXY"></ImageView>



                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:text="Remark"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/general_font"
                    android:imeOptions="actionDone"
                    android:textColor="@color/cListBlackTextColor"
                    android:singleLine="true"
                    android:id="@+id/mEditRemark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail"
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"/>


                    <TextView
                        android:id="@+id/txtaddDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Detail"
                        android:textColor="@color/cButtonTextColor"
                        android:background="@color/colorPrimaryLight"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear"
                    android:orientation="horizontal"
                    android:weightSum="8"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:background="@color/grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Sno"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="@color/cListTextColor"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4.9"
                        android:text="Description"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="@color/cListTextColor"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.1"
                        android:text="No"
                        android:textColor="@color/cListTextColor"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:layout_height="wrap_content" />
                    <!--
                                        <TextView
                                            android:layout_width="0dp"
                                            android:text="Remark"
                                            android:gravity="center"
                                            android:layout_weight="2"
                                            android:textSize="16dp"
                                            android:textColor="@color/cListTextColor"
                                            android:layout_height="wrap_content" />-->

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview1"
                    android:layout_below="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:id="@+id/mLinearBottom">

                <Button
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="SAVE"
                    android:layout_margin="5dp"
                    android:id="@+id/mBtnSave"
                    android:textColor="@color/cButtonTextColor"
                    android:background="@color/colorPrimaryLight"
                    android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Exit"
            android:textColor="@color/cButtonTextColor"
            android:layout_margin="5dp"
            android:id="@+id/mBtnClose"
            android:background="@color/colorPrimaryLight"
            android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <ImageView
        android:layout_width="280dp"
        android:layout_height="350dp"
        android:id="@+id/mImageTempFull"
        android:src="@android:drawable/ic_menu_camera"
        android:visibility="gone"/>

</RelativeLayout>
