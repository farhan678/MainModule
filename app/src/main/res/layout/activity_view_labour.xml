<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mLinearBottom"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Batch Id"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:layout_marginRight="5dp"
                    android:enabled="false"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:singleLine="true"
                    android:id="@+id/mBatchId"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Project No"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:id="@+id/mProjectNumber"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Vendor No"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp"
                    android:focusable="false"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:singleLine="true"
                    android:id="@+id/mContractorNumber"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Agr No"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp"
                    android:focusable="false"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:singleLine="true"
                    android:id="@+id/mContractNumber"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rpt By"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtreportedby"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:layout_marginRight="5dp"
                    android:enabled="false"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/labour_add_label_font"
                    android:text="Rpt Date"
                    android:textStyle="bold"
                    android:id="@+id/mSpinnerReportedBy"></TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp"
                    android:enabled="false"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:singleLine="true"
                    android:id="@+id/edtReportedate"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Esti Flag"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mChkEstimationFlag"
                        android:enabled="false"
                        android:checked="true"/>

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/btnImage"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:scaleType="fitXY"></ImageView>


                </RelativeLayout>



            </LinearLayout>

            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="12dp"
                 android:visibility="gone"
                 android:id="@+id/linearImage"
                 android:orientation="horizontal">

                 <RelativeLayout
