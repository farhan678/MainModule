            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Remark"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/labour_add_label_font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_marginRight="5dp"
                    android:focusable="false"
                    android:textSize="@dimen/general_font"
                    android:textColor="@color/cListBlackTextColor"
                    android:singleLine="true"
                    android:id="@+id/mEditRemark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail"
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/cListBlackTextColor"/>


                    <TextView
                        android:id="@+id/txtaddDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Detail"
                        android:textColor="@color/cButtonTextColor"
                        android:background="@color/colorPrimaryLight"
                        android:textSize="20dp"
                        android:visibility="gone"
                        android:enabled="false"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear"
                    android:orientation="horizontal"
                    android:weightSum="8"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:background="@color/grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Sno"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/cListTextColor"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4.9"
                        android:text="Description"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="@color/cListTextColor"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.1"
                        android:text="No"
                        android:textColor="@color/cListTextColor"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:layout_height="wrap_content" />

                    <!-- <TextView
                         android:layout_width="0dp"
                         android:text="Remark"
                         android:gravity="center"
                         android:layout_weight="2"
                         android:textSize="16dp"
                         android:textColor="@color/cListTextColor"
                         android:layout_height="wrap_content" />
 -->
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview1"
                    android:layout_below="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/mLinearBottom">


        <Button
            android:layout_width="wrap_content"
            android:text="Exit"
            android:textColor="@color/cButtonTextColor"
            android:layout_margin="5dp"
            android:id="@+id/mBtnClose"
            android:gravity="center"
            android:background="@color/colorPrimaryLight"
            android:layout_height="wrap_content" />



    </LinearLayout>


</RelativeLayout>
