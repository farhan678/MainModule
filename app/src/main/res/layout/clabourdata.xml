<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_list_bg"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cBatchID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="3.4"
                android:singleLine="true"
                android:text="Hello"
                android:textColor="@color/cListTextColor"
                android:textSize="@dimen/labour_list_font" />

            <TextView
                android:id="@+id/cProject_NO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:ellipsize="end"
                android:text="project no"
                android:singleLine="true"
                android:textColor="@color/cListTextColor"
                android:textSize="@dimen/labour_list_font" />

            <TextView
                android:id="@+id/cVendor_Nam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="3.6"
                android:singleLine="true"
                android:text="Hello"
                android:textColor="@color/cListTextColor"
                android:textSize="@dimen/labour_list_font" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cReported_Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.4"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Hello"
                android:textColor="@color/cListTextColor"
                android:textSize="@dimen/labour_list_font" />

            <TextView
                android:id="@+id/cRemark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Hello"
                android:textColor="@color/cListTextColor"
                android:textSize="@dimen/labour_list_font" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btndelete"
                    android:layout_width="@dimen/labour_list_icon"
                    android:layout_height="@dimen/labour_list_icon"
                    android:layout_alignParentLeft="true"
                    android:adjustViewBounds="true"
                    android:src="@android:drawable/ic_delete" />

                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="@dimen/labour_list_icon"
                    android:layout_height="@dimen/labour_list_icon"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@android:drawable/ic_input_add" />

                <ImageView
                    android:id="@+id/btnView"
                    android:layout_width="@dimen/labour_list_icon"
                    android:layout_height="@dimen/labour_list_icon"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:src="@android:drawable/ic_menu_search" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>


