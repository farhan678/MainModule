<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidbelieve.drawerwithswipetabs">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/city"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Getstarted"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
        <activity
            android:name=".LocalActivity"
            android:label="@string/title_activity_local"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ActiveActivity"
            android:label="@string/title_activity_active"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ForgotActivity"
            android:label="@string/title_activity_forgot"></activity>
        <activity
            android:name=".PopActivity"
            android:label="@string/title_activity_pop"></activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"></activity>
        <activity
            android:name=".OnlineActivity"
            android:label="@string/title_activity_online"></activity>
        <activity
            android:name=".OfflineActivity"
            android:label="@string/title_activity_offline"></activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"></activity>
        <activity
            android:name=".PasswordActivity"
            android:label="@string/title_activity_password"></activity>
        <activity
            android:name=".EmailActivity"
            android:label="@string/title_activity_email"></activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"></activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"></activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"></activity>
        <activity
            android:name=".onlinesubmenuclick"
            android:label="@string/title_activity_onlinesubmenuclick"></activity>
        <activity
            android:name=".Offlinesubmenuclick"
            android:label="@string/title_activity_offlinesubmenuclick"></activity>
        <activity
            android:name=".LabourActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AddLabourActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".EditLabourActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".ViewLabourActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.cmsfit.labour"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".SubcontractActivity"></activity>
    </application>

</manifest>